{% extends 'closed_area/base.html.twig' %}
{% block content_row %}
    <div class="container container-fluid" id="home">
        <!-- HOME -->

        <!-- ABOUT & UPDATES -->
        <div class="row-fluid" id="about">
            <div class="span12">
                <h2 class="page-title" id="scroll_up"> Aktivitäten</h2>
                {% if is_granted('ROLE_EVENT_CREATE') %}
                <a href="{{ path('event_create') }}" class="btn btn-sm btn-success"><span class="glyphicon
                glyphicon-plus"></span> hinzufügen</a><br><br>
                {% endif %}
                <table class="table table-striped">
                    {% for event in events %}
                        <tr>
                            <td>{{ event.getFormattedDate('%a., %d.%m.%Y') }}</td>
                            <td><a href="{{ path('event_view',{event:event.id}) }}">{{ event.name }}</a></td>
                            <td>{{ event.location }}</td>
                            <td>
                                {% if is_granted('ROLE_EVENT_EDIT') %}
                                <a href="{{ path('event_edit',{event:event.id}) }}" class="btn btn-sm btn-warning"><span
                                            class="glyphicon glyphicon-pencil"></span></a>
                                {% endif %}
                                {% if is_granted('ROLE_EVENT_DELETE') %}
                                <a href="{{ path('event_delete',{event:event.id}) }}"
                                        class="btn btn-sm btn-danger"><span
                                            class="glyphicon glyphicon-trash"></span></a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>

        </div>


    </div>
{% endblock %}