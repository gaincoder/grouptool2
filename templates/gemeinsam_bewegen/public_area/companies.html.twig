{% extends 'public_area/base.html.twig' %}

{% block content %}
{% for company in companies %}

    <div class="row p-4 mb-3 bg-light rounded">
        {% if loop.index is odd %}
            <div class="col-md-2">
                    {% if company.logoPath %}
                        <img class="w-100"
                             src="{{ company.logoWebPath }}" alt="">
                    {% endif %}
            </div>
            <div class="col-md-10">
                <h4>{{ company.name }}</h4>
                <small>{{ company.longText }}</small>
                {% if company.contactData|length > 0 %}
                    <strong>Kontakt: </strong>{{ company.contactData }}
                {% endif %}
                {% if company.contactEmail |length > 0 %}
                    <strong>Kontakt: </strong><a href="mailto:{{ company.contactEmail }}">{{ company.contactEmail }}</a>
                {% endif %}
                {% if company.website|length > 0 %}
                    <strong>Kontakt: </strong><a href="{{ company.website }}">{{ company.website }}</a>
                {% endif %}
            </div>
        {% else %}

            <div class="col-md-10 text-right">
                <h4>{{ company.name }}</h4>
                <small>{{ company.longText }}</small><br>
                {% if company.contactData|length > 0 %}
                    <strong>Kontakt: </strong>{{ company.contactData }}<br>
                {% endif %}
                {% if company.contactEmail |length > 0 %}
                    <strong>E-Mail: </strong><a href="mailto:{{ company.contactEmail }}">{{ company.contactEmail }}</a><br>
                {% endif %}
                {% if company.website|length > 0 %}
                    <strong>Website: </strong><a href="{{ company.website }}">{{ company.website }}</a><br>
                {% endif %}
            </div>
            <div class="col-md-2">
                {% if company.logoPath %}
                    <img class="w-100"
                         src="{{ company.logoWebPath }}" alt="">
                {% endif %}
            </div>
        {% endif %}
    </div>
{% endfor %}
{% endblock %}